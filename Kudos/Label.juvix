module Label;

import Anoma open;

import Token.Label open public;
import Token.Supply open;

mkKudoLabel (originator : PublicKey) : Label :=
  mkLabel@{
    name := originator;
    symbol := "Kudos";
    decimals := 18;
    supply := Unbound;
  };

getOriginator (r : Resource) : PublicKey :=
  Label.name (anomaDecode (Resource.label r));
