module Kudos.TestSigning;

import Stdlib.Prelude open;
import Applib open;
import Anoma.Builtin.System open;

main (signingKeyPayload publicKeyPayload : Nat) : Bool :=
  let
    signingKey : ByteArray := fromAnomaContents 64 signingKeyPayload;
    publicKey : ByteArray := fromAnomaContents 64 publicKeyPayload;
    message : Nat := 123;
    signature : ByteArray :=
      anomaSignDetached
        message
        signingKey;
  in anomaVerifyDetached signature message publicKey;
